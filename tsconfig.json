{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"types": ["jest", "node"]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"jest.config.ts",
		"api/index.js",
		"config/jest/__mocks__/book.js",
		"next.config.ts",
		"playwright.config.js",
		"store/index.tsz",
		"shared/styles.tsz",
		"mocks/handlers.js",
		"mocks/browser.js"
	],
	"exclude": ["node_modules", "config"],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
